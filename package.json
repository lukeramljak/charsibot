{
  "name": "charsibot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun run --filter './apps/discord' dev & bun run --filter './apps/twitch' dev & bun run --filter './apps/twitch-overlay' dev",
    "dev:discord": "bun run --filter './apps/discord' dev",
    "dev:twitch": "bun run --filter './apps/twitch' dev",
    "dev:overlay": "bun run --filter './apps/twitch-overlay' dev",
    "build": "bun run --filter './apps/discord' build && bun run --filter './apps/twitch' build && bun run --filter './apps/twitch-overlay' build",
    "build:discord": "bun run --filter './apps/discord' build",
    "build:twitch": "bun run --filter './apps/twitch' build",
    "build:overlay": "bun run --filter './apps/twitch-overlay' build",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1"
  }
}
